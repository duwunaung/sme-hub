<%- include('../partials/superadmin/header.ejs') %>
    <%- include('../partials/superadmin/navbar.ejs') %>


        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="content">
                <% if (errorMessage) { %>
                    <div id="errorBox" class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <% if (successMessage) { %>
                            <div id="successBox" class="alert alert-success" role="alert">
                                <%= successMessage %>
                            </div>
                            <% } %>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h2>System Admins</h2>
                                    <a class="btn btn-primary" href="/superadmin/add-superadmin">
                                        Add New System Admin
                                    </a>
                                </div>

                                <!-- Organizations Table -->
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Status</th>
                                                <th>Member Since</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="organizationsTable">
                                            <!-- Dynamic rows go here -->
                                            <% for (let i=0; i < users.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= i + (parseInt(pagination.page) - 1)*10 + 1 %>
                                                    </td>

                                                    <td>
                                                        <%= users[i].name %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].email %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].phone %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].status.toUpperCase() %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(users[i].registered).toDateString() %>
                                                    </td>
                                                    <td>
                                                        <a href="/superadmin/users/detail/<%= users[i].id %>"
                                                            class="btn btn-primary btn-sm">View</a>
                                                        <a href="/superadmin/users/update/<%= users[i].id %>"
                                                            class="btn btn-warning btn-sm">Edit</a>

                                                        <% if (users[i].status=='deleted' ) { %>
                                                            <a href="/superadmin/users/restore/<%= users[i].id %>"
                                                                class="btn btn-danger btn-sm">Restore</a>
                                                            <% } else {%>
                                                                <a href="/superadmin/users/delete/<%= users[i].id %>"
                                                                    class="btn btn-danger btn-sm">Delete</a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <nav aria-label="..." id="paginationNav">
                                    <ul class="pagination d-flex">
                                        <li class="page-item">
                                            <a class="page-link" id="prevBtn" href="/superadmin/users?page=<%= pagination.page -1 %>" tabindex="-1">Previous</a>
                                        </li>
                                        <li class="page-item prev"><a class="page-link" href="/superadmin/users?page=1">1</a></li>
                                        <li class="page-item prev" id="prevDots"><a class="page-link">...</a></li>
                                        <li class="page-item active">
                                            <a class="page-link" href="#"><%= pagination.page %><span class="sr-only"></span></a>
                                        </li>
                                        <li class="page-item next" id="nextDots"><a class="page-link">...</a></li>
                                        <li class="page-item next"><a class="page-link" href="/superadmin/users?page=<%= pagination.totalPage %>"><%= pagination.totalPage %></a></li>
                                        <li class="page-item">
                                            <a class="page-link" id="nextBtn" href="/superadmin/users?page=<%= +pagination.page +1 %>">Next</a>
                                        </li>
                                    </ul>
                                </nav>
            </div>
            <script>

                const paginationNav = document.getElementById('paginationNav');
                const page = parseInt("<%= pagination.page %>", 10);
                const totalPage = parseInt("<%= pagination.totalPage %>", 10);
                const prevBtn = document.getElementById('prevBtn');
                const nextBtn = document.getElementById('nextBtn');
                const prevs = document.querySelectorAll('.prev');
                const nexts = document.querySelectorAll('.next');
                const prevDots = document.getElementById('prevDots');
                const nextDots = document.getElementById('nextDots');

                if (page <= 1) {
                    prevBtn.classList.add('disabled');
                    prevBtn.href = '#';
                    prevs.forEach(prev => prev.classList.add('d-none'));
                }

                if (page == totalPage) {
                    nextBtn.classList.add('disabled');
                    nextBtn.href = '#';
                    nexts.forEach(next => next.classList.add('d-none'));
                }

                if ( totalPage == 1 || Number.isNaN(page) || page > totalPage ) {
                    paginationNav.classList.add('d-none');
                }

                if (page === 2) {
                    prevDots.classList.add('d-none');
                }

                if (page === totalPage - 1) {
                    nextDots.classList.add('d-none');
                }

            </script>
        </main>
        <%- include('../partials/superadmin/footer.ejs') %>