<%- include('../partials/superadmin/header.ejs') %>
    <%- include('../partials/superadmin/navbar.ejs') %>


        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="content">

                <% if (errorMessage) { %>
                    <div id="errorBox" class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2>System Admins</h2>
                            <a class="btn btn-primary" href="/superadmin/add-superadmin">
                                Add New System Admin
                        </a>
                        </div>

                        <!-- Organizations Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Member Since</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="organizationsTable">
                                    <!-- Dynamic rows go here -->
                                    <% for (let i=0; i < users.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>

                                            <td>
                                                <%= users[i].name %>
                                            </td>
                                            <td>
                                                <%= users[i].email %>
                                            </td>
                                            <td>
                                                <%= users[i].phone %>
                                            </td>
                                            <td>
                                                <%= users[i].status.toUpperCase() %>
                                            </td>
                                            <td>
                                                <%= new Date(users[i].registered).toDateString() %>
                                            </td>
                                            <td>
                                                <a href="/superadmin/users/detail/<%= users[i].id %>"
                                                    class="btn btn-primary btn-sm">View</a>
                                                <a href="/superadmin/users/update/<%= users[i].id %>"
                                                    class="btn btn-warning btn-sm">Edit</a>

                                                <% if (users[i].status=='deleted' ) { %>
                                                    <a href="/superadmin/users/restore/<%= users[i].id %>"
                                                        class="btn btn-danger btn-sm">Restore</a>
                                                    <% } else {%>
                                                        <a href="/superadmin/users/delete/<%= users[i].id %>"
                                                            class="btn btn-danger btn-sm">Delete</a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
            </div>
			<script>
				function errorMessage() {
	                const searchParams = new URLSearchParams(window.location.search);
	                const type = searchParams.get('type')
					const error = searchParams.get('error')
					
					if (error === "true") {
						if (type === "get-user") {
							alert("404 User not found!")
						}
					}

	            }

	            errorMessage();
			</script>
        </main>
        <%- include('../partials/superadmin/footer.ejs') %>