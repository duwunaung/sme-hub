<%- include('../partials/superadmin/header.ejs') %>
    <%- include('../partials/superadmin/navbar.ejs') %>


        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="content">

                <% if (errorMessage) { %>
                    <div id="errorBox" class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2>Organizations</h2>
                            <button class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#addOrganizationModal">
                                Add New Organization
                            </button>
                        </div>

                        <!-- Organizations Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Member Since</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="organizationsTable">
                                    <!-- Dynamic rows go here -->
                                    <% for (let i=0; i < users.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>

                                            <td>
                                                <%= users[i].name %>
                                            </td>
                                            <td>
                                                <%= users[i].email %>
                                            </td>
                                            <td>
                                                <%= users[i].phone %>
                                            </td>
                                            <td>
                                                <%= users[i].status.toUpperCase() %>
                                            </td>
                                            <td>
                                                <%= new Date(users[i].registered).toDateString() %>
                                            </td>
                                            <td>
                                                <a href="">Link</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
            </div>
        </main>
        <%- include('../partials/superadmin/footer.ejs') %>