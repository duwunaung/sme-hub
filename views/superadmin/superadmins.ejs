<%- include('../partials/superadmin/header.ejs') %>
    <%- include('../partials/superadmin/navbar.ejs') %>


        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="content">
                <% if (errorMessage) { %>
                    <div id="errorBox" class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <% if (successMessage) { %>
                            <div id="successBox" class="alert alert-success" role="alert">
                                <%= successMessage %>
                            </div>
                            <% } %>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h2>System Admins</h2>
                                    <a class="btn btn-primary" href="/superadmin/add-superadmin">
                                        Add New System Admin
                                    </a>
                                </div>

                                <!-- Organizations Table -->
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Status</th>
                                                <th>Member Since</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="organizationsTable">
                                            <!-- Dynamic rows go here -->
                                            <% for (let i=0; i < users.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <%= i+1 %>
                                                    </td>

                                                    <td>
                                                        <%= users[i].name %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].email %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].phone %>
                                                    </td>
                                                    <td>
                                                        <%= users[i].status.toUpperCase() %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(users[i].registered).toDateString() %>
                                                    </td>
                                                    <td>
                                                        <a href="/superadmin/users/detail/<%= users[i].id %>"
                                                            class="btn btn-primary btn-sm">View</a>
                                                        <a href="/superadmin/users/update/<%= users[i].id %>"
                                                            class="btn btn-warning btn-sm">Edit</a>

                                                        <% if (users[i].status=='deleted' ) { %>
                                                            <a href="/superadmin/users/restore/<%= users[i].id %>"
                                                                class="btn btn-danger btn-sm">Restore</a>
                                                            <% } else {%>
                                                                <a href="/superadmin/users/delete/<%= users[i].id %>"
                                                                    class="btn btn-danger btn-sm">Delete</a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <nav aria-label="...">
                                    <ul class="pagination">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item active">
                                            <a class="page-link" href="#">2 <span class="sr-only"></span></a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">Next</a>
                                        </li>
                                    </ul>
                                </nav>
            </div>
        </main>
        <%- include('../partials/superadmin/footer.ejs') %>