<%- include('../partials/superadmin/header.ejs') %>
    <%- include('../partials/superadmin/navbar.ejs') %>


        <!-- Main Content -->
        <main class="col-md-9 col-lg-10">
            <div class="content">

                <% if (errorMessage) { %>
                    <div id="errorBox" class="alert alert-danger" role="alert">
                        <%= errorMessage %>
                    </div>
                    <% } %>
					<% if (successMessage) { %>
                        <div id="successBox" class="alert alert-success" role="alert">
                            <%= successMessage %>
                        </div>
                        <% } %>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2>Organizations</h2>
                            <button class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#addOrganizationModal">
                                Add New Organization
                            </button>
                        </div>
                        <!-- xxx -->
                        <nav class="mb-4 d-flex w-100 justify-content-between">
                            <div class="d-flex searchBar" role="search">
                                <input class="form-control me-2" type="search" id="searchValue" onkeydown="checkEnter(event)" placeholder="Enter organization name" aria-label="Search" value="<%= name %>" required>
                                <button class="btn btn-primary" id="searchBtn" onclick="search()"><i class="fa-solid fa-magnifying-glass" style="color: #fff;"></i></button>
                            </div>
                            <div class="d-flex">
                                <div style="margin-top: 7px;">
                                    <input style="transform: scale(1.2)" type="checkbox" id="expiredCheckbox" onclick="showExpired()">
                                    <span style="font-weight: 500;" class="mx-2">Show expired</span>
                                </div>
                                <div class="btn-group">
                                    <button type="button" class="btn dropdown-toggle sortBtn" id="filterBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                        Filter
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <a class="dropdown-item status dropdown-active" id="all" onclick="changeStatus('all')">All</a>
                                        <a class="dropdown-item status" id="active" onclick="changeStatus('active')">Active</a>
                                        <a class="dropdown-item status" id="deleted" onclick="changeStatus('deleted')">Inactive</a>
                                        <a class="dropdown-item status" id="pending" onclick="changeStatus('pending')">Pending</a>
                                        <a class="dropdown-item status" id="expire" onclick="changeStatus('expire')">Expired</a>
                                    </ul>
                                </div>
                                <button class="btn sortBtn mx-2" id="refresh" onclick="refresh()">Refresh</button>
                            </div>
                        </nav>
                        <!-- xxx -->

                        <!-- Organizations Table -->
                        <div class="table-responsive">
                            <% if ( orgs.length==0 && pagination.page == 1 ) { %>
                                <div class="alert alert-warning" role="alert">
                                    No organization found.
                                </div>
                                <% } else {%>
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="min-width: 60px; cursor: pointer;" onclick="sortTable(0, 'number', this)">Id<span></span></th>
                                        <th style="min-width: 60px; cursor: pointer;" onclick="sortTable(1, 'string', this)">Organization Name<span></span></th>
                                        <th style="min-width: 60px; cursor: pointer;" onclick="sortTable(2, 'date', this)">Expiration Date<span></span></th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="organizationsTable">
                                    <!-- Dynamic rows go here -->
                                    <% for (let i=0; i < orgs.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= i + (parseInt(pagination.page) - 1)*10 + 1 %>
                                            </td>
                                            <td>
												<%= orgs[i].name.length > 30 
						                        ? orgs[i].name.substring(0, 30) + "..." 
						                        : orgs[i].name %>
                                            </td>
                                            <td>
                                                <%= new Date(orgs[i].expiredDate).toDateString() %>
                                            </td>
                                            <td class="text-center">
                                                <% if (orgs[i].status == 'active' ) { %>
                                                    <div class="icons" data-tooltip="Active" onmouseover="changeColor('#28a745')"><i class="fa-solid fa-circle-check" style="color: green; font-size: 1.1rem;"></i></div>
                                                <% } else if (orgs[i].status == 'deleted' ) { %>
                                                    <div class="icons" data-tooltip="Inactive" onmouseover="changeColor('#dc3545')"><i class="fa-solid fa-circle-xmark" style="color: red; font-size: 1.1rem;"></i></div>
                                                <% } else { %>
                                                    <div class="icons" data-tooltip="Pending" onmouseover="changeColor('#ffc107')"><i class="fa-solid fa-circle-exclamation" style="color: orange; font-size: 1.1rem;"></i></div>
                                                <% } %>
                                            </td>
                                            <td style="padding-left: 5%;">
                                                <a onclick="clickBtn('detail', '<%= orgs[i].id %>')" href="#"
                                                    class="btn btn-primary btn-sm">View</a>
                                                <a onclick="clickBtn('update', '<%= orgs[i].id %>')" href="#"
                                                    class="btn btn-warning btn-sm">Edit</a>
                                                <% if (orgs[i].status=='deleted' ) { %>
                                                    <a onclick="clickBtn('restore', '<%= orgs[i].id %>')" href="#"
                                                        class="btn btn-danger btn-sm">Restore</a>
                                                    <% } else {%>
                                                        <a onclick="clickBtn('delete', '<%= orgs[i].id %>')" href="#"
                                                            class="btn btn-danger btn-sm">Delete</a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% } } %>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="..." id="paginationNav">
                            <div class="d-flex justify-content-center">
                                <p> <%= (parseInt(pagination.page) - 1)*10 + 1 %><span id="lastNum">-<%= parseInt(pagination.page) *10 %></span> / <%= pagination.total %></p>
                            </div>
                            <ul class="pagination d-flex justify-content-center">
                                <li class="page-item">
                                    <a class="page-link" id="prevBtn" href="#" onclick="pagination('orgPage','<%= pagination.page -1 %>')" tabindex="-1"><</a>
                                </li>
                                <li class="page-item prev"><a class="page-link" href="#" onclick="pagination('orgPage',1)" >1</a></li>
                                <li class="page-item prev"><a class="page-link" href="#" onclick="pagination('orgPage',2)" id="prevDots" href="#">...</a></li>
                                <li class="page-item prev" id="prevNum">
                                    <a class="page-link" href="#" onclick="pagination('orgPage','<%= pagination.page -1 %>')"><%= pagination.page -1 %><span class="sr-only"></span></a>
                                </li>
                                <li class="page-item active" id="currentPage">
                                    <a class="page-link" href="#"><%= pagination.page %><span class="sr-only"></span></a>
                                </li>
                                <li class="page-item next" id="nextNum">
                                    <a class="page-link" href="#" onclick="pagination('orgPage','<%= +pagination.page +1 %>')"><%= +pagination.page +1 %><span class="sr-only"></span></a>
                                </li>
                                <li class="page-item next"><a class="page-link" id="nextDots" href="#" onclick="pagination('orgPage','<%= +pagination.page +2 %>')">...</a></li>
                                <li class="page-item next"><a class="page-link" href="#" onclick="pagination('orgPage','<%= pagination.totalPage %>')"><%= pagination.totalPage %></a></li>
                                <li class="page-item">
                                    <a class="page-link" id="nextBtn" href="#" onclick="pagination('orgPage','<%= +pagination.page +1 %>')">></a>
                                </li>
                            </ul>
                        </nav>
            </div>
        </main>
        <!-- Add Organization Modal -->
        <div class="modal fade" id="addOrganizationModal" tabindex="-1" aria-labelledby="addOrganizationModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addOrganizationModalLabel">Add New Organization</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addOrganizationForm" action="/superadmin/organization/register" method="POST" onsubmit="submitForm(event)">
                            <div class="mb-3">
                                <label for="orgName" class="form-label">Organization Name</label>
                                <input type="text" class="form-control" maxlength="145" name="name" id="orgName"
                                    placeholder="Enter organization name" value="" oninput="checkInputs('nameOrgError', 'orgName')" required>
								<p id="nameOrgError" class="mt-2 d-none text-danger">*Organization Name can't exceed 145 characters!</p>
                            </div>
                            <div class="mb-3">
                                <label for="orgAddress" class="form-label">Address</label>
                                <textarea class="form-control" id="orgAddress" maxlength="145" name="address" rows="2"
                                    placeholder="Enter organization address" oninput="checkInputs('addressOrgError', 'orgAddress')" required></textarea>
								<p id="addressOrgError" class="mt-2 d-none text-danger">*Address can't exceed 145 characters!</p>
                            </div>
                            <div class="mb-3">
                                <label for="orgPhone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" maxlength="45" id="orgPhone" name="phone"
                                    placeholder="Enter phone number" value="" oninput="checkInputs('phoneOrgError', 'orgPhone')" required>
								<p id="phoneOrgError" class="mt-2 d-none text-danger">*Phone can't exceed 45 characters!</p>
                            </div>
                            <div class="mb-3">
                                <label for="orgStatus" class="form-label">Status</label>
                                <select id="orgStatus" name="status" class="form-select" required>

                                    <% options.forEach(option=> { %>
                                        <option value="<%= option.name %>">
                                            <%= option.name.toUpperCase() %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <button type="submit" id="addBtn" class="btn btn-primary w-100">Add Organization</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            // Sort
            let sortDirections = {};

            function sortTable(columnIndex, type, headerElement) {
                let table = document.getElementById("organizationsTable");
                let rows = Array.from(table.getElementsByTagName("tr"));
                let ascending = !sortDirections[columnIndex];
                sortDirections[columnIndex] = ascending;

                rows.sort((rowA, rowB) => {
                    let cellA = rowA.getElementsByTagName("td")[columnIndex]?.innerText.trim() || "";
                    let cellB = rowB.getElementsByTagName("td")[columnIndex]?.innerText.trim() || "";

                    if (type === "number") {
                        cellA = parseFloat(cellA.replace(/[^0-9.-]/g, "")) || 0;
                        cellB = parseFloat(cellB.replace(/[^0-9.-]/g, "")) || 0;
                        return ascending ? cellA - cellB : cellB - cellA;
                    } else if (type === "date") {
                        cellA = new Date(cellA).getTime() || 0;
                        cellB = new Date(cellB).getTime() || 0;
                        return ascending ? cellA - cellB : cellB - cellA;
                    } else {
                        return ascending ? cellA.localeCompare(cellB) : cellB.localeCompare(cellA);
                    }
                });
                rows.forEach(row => table.appendChild(row));
                document.querySelectorAll("th span").forEach(span => span.innerHTML = "");
                headerElement.querySelector("span").innerHTML = ascending ? " ▲" : " ▼";
            }
            // xxx

            const form = document.getElementById('addOrganizationForm');
            const addButton = document.getElementById('addBtn');
            const inputs = form.querySelectorAll('.form-control[required]:not([readonly])');

            function checkInputs(messageBox, inputField) {
                let allFilled = true;
                inputs.forEach(index => {
                if (!index.value.trim()) {
                    allFilled = false;
                }
                });
                addButton.disabled = !allFilled;
				const message = document.getElementById(messageBox)
				const input = document.getElementById(inputField)
				if (input.value.length === parseInt(input.maxLength)) {
			        message.classList.remove('d-none');
			    } else {
			        message.classList.add('d-none');
			    }
            }

            function submitForm(event) {
                form = document.getElementById('addOrganizationForm')

			    addButton.disabled = true;
			    addButton.textContent = 'Submitting...';

                form.action = "/superadmin/add-superadmin" + query
			}
            // xxx

            const paginationNav = document.getElementById('paginationNav');
            const page = parseInt("<%= pagination.page %>", 10);
            const totalPage = parseInt("<%= pagination.totalPage %>", 10);
            const total = parseInt("<%= pagination.total %>", 10);
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const prevs = document.querySelectorAll('.prev');
            const nexts = document.querySelectorAll('.next');
            const prevDots = document.getElementById('prevDots');
            const nextDots = document.getElementById('nextDots');
            const prevNum = document.getElementById('prevNum');
            const nextNum = document.getElementById('nextNum');
            const lastNum = document.getElementById('lastNum');

            if ( totalPage == 1 || Number.isNaN(page) || page > totalPage ) {
                paginationNav.classList.add('d-none');
            }

            if (page <= 1) {
                prevBtn.classList.add('disabled');
                prevBtn.href = '#';
                prevs.forEach(prev => prev.classList.add('d-none'));
            } else if (page === 2) {
                prevDots.classList.add('d-none');
                prevNum.classList.add('d-none');
            } else if (page === 3) {
                prevDots.classList.add('d-none');
            } else if (page === 4) {
                prevDots.innerText = "2"
            }

            if (page == totalPage) {
                nextBtn.classList.add('disabled');
                nextBtn.href = '#';
                nexts.forEach(next => next.classList.add('d-none'));
                lastNum.innerHTML = "-" + total
                if (( total%10 ) == 1) {
                    lastNum.classList.add('d-none')
                }
            } else if (page === totalPage - 1) {
                nextDots.classList.add('d-none');
                nextNum.classList.add('d-none');
            } else if (page === totalPage - 2) {
                nextDots.classList.add('d-none');
            } else if (page === totalPage - 3) {
                nextDots.innerText = totalPage -1
            }

            // Tooltips
            function changeColor(tooltipColor) {
                const icons = document.querySelectorAll('.icons')
                icons.forEach (icon => {
                    icon.style.setProperty('--tooltip-color', tooltipColor);
                })
            }    

            // Refresh
            function refresh() {
                window.location.href = "http://localhost:3000/superadmin/organizations?expired=false"
            }

            // Search
            function search() {
                let url = new URL(window.location.href);
                const searchValue = document.getElementById("searchValue")
                
                if (searchValue.value.trim()) {
                    url.searchParams.set("orgName", searchValue.value.trim())
                    url.searchParams.set('orgPage', 1);
                } else {
                    url.searchParams.delete("orgName")
                }
                window.location.href = url.toString();
            }

            function checkEnter(event) {
                if (event.key === 'Enter') {
                    search()
                }
            }

            // Show expired
            function showExpired() {
                let url = new URL(window.location.href);
                if ( url.searchParams.get('expired') == 'true' ) {
                    url.searchParams.set('expired', false);
                    url.searchParams.set('orgPage', 1);
                } else {
                    url.searchParams.set('expired', true);
                    url.searchParams.set('orgPage', 1);
                }
                window.location.href = url.toString();
            }

            // Change status in filter
            function changeStatus(status) {
                let url = new URL(window.location.href);
                
                if ( status != 'all' ) {
                    url.searchParams.set('orgStatus', status);
                    url.searchParams.set('orgPage', 1);
                } else {
                    url.searchParams.set('orgStatus', 'all')
                    url.searchParams.set('orgPage', 1);
                }
                window.location.href = url.toString();
            }

            let searchParams = new URLSearchParams(window.location.search);
            let expired = searchParams.get('expired')
            if ( expired === 'true' ) {
                let expiredCheckbox = document.getElementById('expiredCheckbox')
                expiredCheckbox.checked = true
            }

            const statusQuery = searchParams.get('orgStatus')
            if (statusQuery) {
                const statuses = document.querySelectorAll('.status');
                statuses.forEach(status => {
                    status.classList.remove('dropdown-active');
                })
                document.getElementById(`${statusQuery}`).classList.add('dropdown-active');
            }

            // Pagination
            function pagination( type, num ) {
                let url = new URL(window.location.href);
                url.searchParams.set( type, num)
                window.location.href = url.toString();
            }

            // Click Btns
            let url = new URL(window.location.href);
            let orgName = url.searchParams.get( 'orgName' )
            let orgStatus = url.searchParams.get( 'orgStatus' )
            let orgPage = url.searchParams.get( 'orgPage' )
            let query = "?"
            
            if (orgPage) {
                query += "orgPage=" + orgPage
            } else {
                query += "orgPage=1"
            }

            if (orgName) {
                query += "&orgName=" + orgName
            }

            const filterBtn = document.getElementById('filterBtn')
            if (orgStatus) {
                query += "&orgStatus=" + orgStatus
                if (orgStatus == "all") {
                    filterBtn.classList.remove('useFilter')
                } else {
                    filterBtn.classList.add('useFilter')
                }
            }

            if (expired) {
                query += "&expired=" + expired
            }

            function clickBtn(type, num) {
                if (type === 'add') {
                    
                } else {
                    window.location.href = "/superadmin/organizations/" + type + "/" + num + query
                }
            }
            
        </script>
        <%- include('../partials/superadmin/footer.ejs') %>