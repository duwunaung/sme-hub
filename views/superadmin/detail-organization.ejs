        <script>
            // Sort
            let sortDirections = {};

            function sortTable(columnIndex, type, headerElement) {
                let table = document.getElementById("usersTable");
                let rows = Array.from(table.getElementsByTagName("tr"));
                let ascending = !sortDirections[columnIndex];
                sortDirections[columnIndex] = ascending;

                rows.sort((rowA, rowB) => {
                    let cellA = rowA.getElementsByTagName("td")[columnIndex]?.innerText.trim() || "";
                    let cellB = rowB.getElementsByTagName("td")[columnIndex]?.innerText.trim() || "";

                    if (type === "number") {
                        cellA = parseFloat(cellA.replace(/[^0-9.-]/g, "")) || 0;
                        cellB = parseFloat(cellB.replace(/[^0-9.-]/g, "")) || 0;
                        return ascending ? cellA - cellB : cellB - cellA;
                    } else {
                        return ascending ? cellA.localeCompare(cellB) : cellB.localeCompare(cellA);
                    }
                });
                rows.forEach(row => table.appendChild(row));
                document.querySelectorAll("th span").forEach(span => span.innerHTML = "");
                headerElement.querySelector("span").innerHTML = ascending ? " ▲" : " ▼";
            }
            // xxx

            // Click Btns
            let url = new URL(window.location.href);
            const orgId = "<%= org.id %>"
            let orgName = url.searchParams.get( 'orgName' )
            let orgStatus = url.searchParams.get( 'orgStatus' )
            let orgPage = url.searchParams.get( 'orgPage' )
            let expired = url.searchParams.get( 'expired' )
            let query = "?"
            
            if (orgPage) {
                query += "orgPage=" + orgPage
            } else {
                query += "orgPage=1"
            }

            if (orgName) {
                query += "&orgName=" + orgName
            }

            if (orgStatus) {
                query += "&orgStatus=" + orgStatus
            }

            if (expired) {
                query += "&expired=" + expired
            }

            let userName = url.searchParams.get( 'userName' )
            let userStatus = url.searchParams.get( 'userStatus' )
            let userPage = url.searchParams.get( 'userPage' )
            let userRole = url.searchParams.get( 'userRole' )
            let userQuery = "&"
            
            if (userPage) {
                userQuery += "userPage=" + userPage
            } else {
                userQuery += "userPage=1"
            }

            if (userName) {
                userQuery += "&userName=" + userName
            }

            const filterBtn = document.getElementById('filterBtn')
            if (userStatus) {
                userQuery += "&userStatus=" + userStatus
                if (userStatus == "all") {
                    filterBtn.classList.remove('useFilter')
                } else {
                    filterBtn.classList.add('useFilter')
                }
            }

            const roleBtn = document.getElementById('roleBtn')
            if (userRole) {
                userQuery += "&userRole=" + userRole
                if (userRole == "allRoles") {
                    roleBtn.classList.remove('useFilter')
                } else {
                    roleBtn.classList.add('useFilter')
                }
            }

            function clickBtn(type, num) {
                if ( type == 'back' ) {
                    window.location.href = "/superadmin/organizations" + query
                } else if ( type == 'updateOrg' ) {
                    window.location.href = "/superadmin/organizations/update/" + num + query
                } else if ( type == 'adduser' ) {
                    window.location.href = "/superadmin/organizations/" + type + "/" + orgId + query + userQuery
                } else {
                    window.location.href = "/superadmin/organizations/" + type + "/" + orgId + "/" + num + query + userQuery
                }
            }

            // Refresh
            function reset() {
                window.location.href = "/superadmin/organizations/detail/" + orgId + query + "&userPage=1&activeUsers=true"
            }
            
            // Ensure users section 'active' in detail-organization ( While get query = 'activeUsers' )
            const searchParams = new URLSearchParams(window.location.search);
            const activeUsers = searchParams.get('activeUsers')
            if (activeUsers) {
                const tabs = document.querySelectorAll('.view-tab');
                tabs.forEach(tab => {
                    tab.classList.remove('active');
                })
                document.querySelector(`.users-tab`).classList.add('active');

                const containers = document.querySelectorAll('.view-containers');
                containers.forEach(container => {
                    container.classList.add('d-none');
                })
                document.getElementById(`users-view`).classList.remove('d-none');
            }

            const status = searchParams.get('userStatus')
            if (status) {
                const statuses = document.querySelectorAll('.status');
                statuses.forEach(status => {
                    status.classList.remove('dropdown-active');
                })
                document.getElementById(`${status}`).classList.add('dropdown-active');
            }

            const role = searchParams.get('userRole')
            if (role) {
                const roles = document.querySelectorAll('.role');
                roles.forEach(role => {
                    role.classList.remove('dropdown-active');
                })
                document.getElementById(`${role}`).classList.add('dropdown-active');
            }

            // xxx
            
            const paginationNav = document.getElementById('paginationNav');
            const page = parseInt("<%= pagination.page %>", 10);
            const totalPage = parseInt("<%= pagination.totalPage %>", 10);
            const total = parseInt("<%= pagination.total %>", 10);
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const prevs = document.querySelectorAll('.prev');
            const nexts = document.querySelectorAll('.next');
            const prevDots = document.getElementById('prevDots');
            const nextDots = document.getElementById('nextDots');
            const prevNum = document.getElementById('prevNum');
            const nextNum = document.getElementById('nextNum');
            const lastNum = document.getElementById('lastNum');

            if ( totalPage == 1 || Number.isNaN(page) || page > totalPage ) {
                paginationNav.classList.add('d-none');
            }

            if (page <= 1) {
                prevBtn.classList.add('disabled');
                prevBtn.href = '#';
                prevs.forEach(prev => prev.classList.add('d-none'));
            } else if (page === 2) {
                prevDots.classList.add('d-none');
                prevNum.classList.add('d-none');
            } else if (page === 3) {
                prevDots.classList.add('d-none');
            } else if (page === 4) {
                prevDots.innerText = "2"
            }

            if (page == totalPage) {
                nextBtn.classList.add('disabled');
                nextBtn.href = '#';
                nexts.forEach(next => next.classList.add('d-none'));
                lastNum.innerHTML = "-" + total
                if (( total%10 ) == 1) {
                    lastNum.classList.add('d-none')
                }
            } else if (page === totalPage - 1) {
                nextDots.classList.add('d-none');
                nextNum.classList.add('d-none');
            } else if (page === totalPage - 2) {
                nextDots.classList.add('d-none');
            } else if (page === totalPage - 3) {
                nextDots.innerText = totalPage -1
            }
            // xxx

            function changeInfo(type) {
                const tabs = document.querySelectorAll('.view-tab');
                tabs.forEach(tab => {
                    tab.classList.remove('active');
                })
                document.querySelector(`.${type}-tab`).classList.add('active');

                const containers = document.querySelectorAll('.view-containers');
                containers.forEach(container => {
                    container.classList.add('d-none');
                })
                document.getElementById(`${type}-view`).classList.remove('d-none');
            }

            function generatePassowrd() {
                const password = Math.random().toString(36).slice(-8);
                document.getElementById('userPassword').value = password;
            }

            const errorType = searchParams.get('type')
            if (errorType == 'user-create' || errorType == 'dup-email') {

                const tabs = document.querySelectorAll('.view-tab');
                tabs.forEach(tab => {
                    tab.classList.remove('active');
                })
                document.querySelector(`.users-tab`).classList.add('active');

                const containers = document.querySelectorAll('.view-containers');
                containers.forEach(container => {
                    container.classList.add('d-none');
                })
                document.getElementById(`users-view`).classList.remove('d-none');
            }

            // Tooltips
            function changeColor(tooltipColor) {
                const icons = document.querySelectorAll('.usericons')
                icons.forEach (icon => {
                    icon.style.setProperty('--tooltip-color', tooltipColor);
                })
            }

            // Search
            function search() {
                let url = new URL(window.location.href);
                let searchValue = document.getElementById("searchValue").value.trim()
                
                if (searchValue) {
                    url.searchParams.set("userName", searchValue)
                    url.searchParams.set("activeUsers", true)
                    url.searchParams.set('userPage', 1);
                } else {
                    url.searchParams.delete("userName")
                    url.searchParams.set("activeUsers", true)
                }
                window.location.href = url.toString();
            }

            function checkEnter(event) {
                if (event.key === 'Enter') {
                    search()
                }
            }

            // Change status in filter
            function changeStatus(status) {
                
                if ( status != 'all' ) {
                    url.searchParams.set('userStatus', status);
                    url.searchParams.set('activeUsers', 'true');
                    url.searchParams.set('userPage', 1);
                } else {
                    url.searchParams.set('userStatus', 'all');
                    url.searchParams.set('activeUsers', 'true');
                    url.searchParams.set('userPage', 1);
                }
                window.location.href = url.toString();
            }
            function changeRole(role) {
                
                if ( role != 'allRoles' ) {
                    url.searchParams.set('userRole', role);
                    url.searchParams.set('activeUsers', 'true');
                } else {
                    url.searchParams.set('userRole', 'allRoles');
                    url.searchParams.set('activeUsers', 'true');
                }
                window.location.href = url.toString();
            }

            const statusQuery = searchParams.get('userStatus')
            if (statusQuery) {
                const statuses = document.querySelectorAll('.status');
                statuses.forEach(status => {
                    status.classList.remove('dropdown-active');
                })
                document.getElementById(`${statusQuery}`).classList.add('dropdown-active');
            }

            const roleQuery = searchParams.get('userRole')
            if (roleQuery) {
                const roles = document.querySelectorAll('.roles');
                roles.forEach(role => {
                    role.classList.remove('dropdown-active');
                })
                document.getElementById(`${roleQuery}`).classList.add('dropdown-active');
            }


        </script>
