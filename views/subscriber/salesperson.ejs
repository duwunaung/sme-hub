															   data-bs-target="#confirmationModal" 
															   data-salesperson-id="<%= salesperson[i].id %>"
															   onclick="setDeleteSalesperson(this)" style="border-radius: 8px;">Delete</a>
														<% } %>
													</div>
												</td>
											</tr>
										<% } %>
									<% } else { %>
