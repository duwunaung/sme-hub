	<style>
		.sidebar {
	        width: 100%;
	        max-width: 270px;
	        position: fixed;
	        left: -270px;
	        height: 100vh;
	        transition: transform 0.3s ease;
	        background-color: white;
	        z-index: 1000;
	    }

	    .sidebar.open {
	        transform: translateX(270px);
	    }

	    @media (min-width: 1024px) {
	        .sidebar {
	            left: 0;
	            transform: none;
	        }

	        .main-content {
	            margin-left: 270px;
				width: calc(100% - 270px);
            	padding-right: 20px;
	        }
	    }

	    .menu-toggle {
	        display: block;
	    }

	    @media (min-width: 1024px) {
	        .menu-toggle {
	            display: none;
	        }
	    }
	</style>
	<div id="sidebar" class="sidebar" onclick="handleSidebarClick(event)">
        <div class="d-flex" style="margin-top: 30px;">
            <button id="menuBtn" class="btn menu-icon me-2">
                <img src="/dummy.svg" alt="menu logo" id="menulogo">
            </button>
            <h5 class="fw-bolder mt-3">FLOWSIGHT</h5>
        </div>
        <div class="offcanvas-body">
			<ul class="nav flex-column mt-4 list-unstyled">
			   <li class="nav-item my-2 nav-item-dashboard menu-btn-format">
				   <a class="nav-link d-flex align-items-center py-2 fs-6 nav-link-dashboard" href="/superadmin/dashboard">
					   <img src="/dashboard.svg" class="me-2" id="dashboard" style="height: 26px; width: 26px;">
					   <span>Dashboard</span>
				   </a>
			   </li>
			   <li class="nav-item my-2 py-1 nav-item-organizations menu-btn-format">
				   <a class="nav-link d-flex align-items-center py-2 fs-6 nav-link-organizations" href="/superadmin/organizations">
					   <img src="/organizations.svg" class="me-2" id="organizations" style="height: 20px; width: 26px;">
					   <span>Organizations</span>
				   </a>
			   </li>
			   <li class="nav-item my-2 nav-item-users menu-btn-format">
				   <a class="nav-link d-flex align-items-center py-2 fs-6 nav-link-users" href="/superadmin/users">
					   <img src="/users.svg" class="me-2" id="users" style="height: 26px; width: 26px;">
					   <span>Users</span>
				   </a>
			   </li>
			   <li class="nav-item my-2 nav-item-profile menu-btn-format">
				   <a class="nav-link d-flex align-items-center py-2 fs-6 nav-link-profile" href="/superadmin/profile">
					   <img src="/profile.svg" class="me-2" id="profile" style="height: 26px; width: 26px;">
					   <span>Profile</span>
				   </a>
			   </li>
			   <li class="nav-item my-2 menu-btn-format">
				   <a class="nav-link d-flex align-items-center py-2 fs-6" href="/superadmin/logout">
					   <img src="/Logout.svg" class="me-2" style="height: 26px; width: 26px;">
					   <span>Logout</span>
				   </a>
			   </li>
			</ul>
		</div>
    </div>
    <!-- For Mobile -->
    <div id="mobile" class="mt-3">
        <nav class="navbar">
            <div class="container-fluid">
                <button id="menuBtn" class="btn menu-icon me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
                    <img src="/dummy.svg" alt="menu logo" id="menulogo">
                </button>
                <div class="d-flex">
                    <button onclick="goToProfile()" id="profileBtn" class="btn profile-icon" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                        <img src="/profileIcon.svg" style="width: 60px; height: 60px; border-radius: 50%;" alt="menu logo" id="profilelogo">
                    </button>
                </div>
            </div>
        </nav>
        
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title fw-bolder mx-3">FLOWSIGHT</h5>
                <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item mb-2 nav-item-dashboard">
                        <a class="nav-link d-flex py-2 fs-6 nav-link-dashboard" href="/superadmin/dashboard"><img src="/dashboard.svg" class="mx-3" id="mobiledashboard"><span class="mt-1">Dashboard</span></a>
                    </li>
                    <li class="nav-item my-2 py-1 nav-item-organizations">
                        <a class="nav-link d-flex py-2 fs-6 nav-link-organizations" href="/superadmin/organizations"><img src="/organizations.svg" width="13%" class="mx-3" id="mobileorganizations"><span class="mx-1">Organizations</span></a>
                    </li>
                    <li class="nav-item my-2 nav-item-users">
                        <a class="nav-link d-flex py-2 fs-6 nav-link-users" href="/superadmin/users"><img src="/users.svg" width="15%" class="mx-3" id="mobileusers"><span class="mt-1">Users</span></a>
                    </li>
                    <li class="nav-item my-2 nav-item-profile">
                        <a class="nav-link d-flex py-2 fs-6 nav-link-profile mx-1" href="/superadmin/profile"><img src="/profile.svg" width="11%" class="mx-3" id="mobileprofile"><span class="mt-1 mx-1">Profile</span></a>
                    </li>
                    <li class="nav-item my-2">
                        <a class="nav-link d-flex py-2 mx-1 fs-6" href="/superadmin/logout"><img src="/Logout.svg" class="mx-3"><span>Logout</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="main-content" onclick="closeSidebarOutsideClick(event)">
        <div class="mt-3 mx-4" id="pcProfile" style="justify-content: space-between;">
            <div class="d-flex">
                <button onclick="goToProfile()" id="profileBtn" class="btn profile-icon me-3" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    <img src="/profileIcon.svg" style="width: 60px; height: 60px; border-radius: 50%;" alt="menu logo" id="profilelogo">
                </button>
                <div class="mt-1">
                    <h6 class="fw-bolder"><%= userName %></h6>
                    <h6 style="margin-top: -5px;"><%= userRole %></h6>
                </div>
            </div>
            <div class="dateRectangle mt-2" style="align-items: center;">
                <h6 class="date"><span id="currentDate" class="fw-bolder mx-2"></span></h6>
            </div>
        </div>

    <script>

	    function closeSidebarOutsideClick(event) {
	        var sidebar = document.getElementById('sidebar');
	        var menuToggle = document.querySelector('.menu-toggle');
	        
	        if (sidebar.classList.contains('open') && 
	            !sidebar.contains(event.target) && 
	            !menuToggle.contains(event.target)) {
	            sidebar.classList.remove('open');
	        }
	    }

	    function handleSidebarClick(event) {
	        event.stopPropagation();
	    }

        const today = new Date();
		const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
		const currentDate = today.toLocaleDateString('en-US', options);
		document.getElementById("currentDate").innerText = currentDate;

    
        function goToProfile () {
            window.location.href = '/superadmin/profile'
        }
        
        function navbarActive() {
            let pathname = window.location.pathname;
            let pathParts = pathname.split('/');
            let currentPage = pathParts[2];
            const navItems = document.querySelectorAll('.nav-item-' + currentPage)
            navItems.forEach ( navItem => {
                navItem.classList.add('nav-item-active')
            })
            const navLinks = document.querySelectorAll('.nav-link-' + currentPage)
            navLinks.forEach ( navLink => {
                navLink.classList.add('nav-link-active')
            })
            const page = document.getElementById(currentPage)
            document.getElementById(currentPage).src = "/" + currentPage + "(active).svg"
            document.getElementById( 'mobile' + currentPage).src = "/" + currentPage + "(active).svg"
        }
        navbarActive();

    </script>